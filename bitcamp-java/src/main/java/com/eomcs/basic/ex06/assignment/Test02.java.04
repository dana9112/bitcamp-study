package com.eomcs.basic.ex06.assignment;
// 현재 과제와 유사한 결과를 내는 기존 소스를 가져온다.

import java.util.Scanner;

public class Test02 {

  public static void main(String[] args) {
    int width = Console.inputInt();

    int line = 0;
    while (line++ < width) {
      Graphic.drawLine(line);
      System.out.println();
    }
    line--;

    while (--line > 0) {
      Graphic.drawLine(line);
      System.out.println();
    }
  }
}
